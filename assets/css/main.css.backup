/* =========================================/* ============================

   HYDRO-CONECTA - MAIN STYLES   VARIABLES Y RESET

   Variables, Reset y Estilos Base   ============================ */

   ========================================= */:root {

    --primary: #3498db;

/* ==================== CSS VARIABLES ==================== */    --primary-dark: #2980b9;

:root {    --secondary: #2c3e50;

    /* Colores Principales */    --success: #27ae60;

    --color-primary: #0077b6;    --danger: #e74c3c;

    --color-secondary: #00b4d8;    --warning: #f39c12;

    --color-accent: #90e0ef;    --light: #ecf0f1;

    --color-dark: #03045e;    --dark: #34495e;

    --color-light: #caf0f8;    --sidebar-width: 250px;

    --color-white: #ffffff;    --header-height: 60px;

    --color-text: #1e293b;    --transition: all 0.3s ease;

    --color-text-light: #64748b;}

    

    /* Gradientes */* {

    --gradient-primary: linear-gradient(135deg, #0077b6 0%, #00b4d8 100%);    margin: 0;

    --gradient-hero: linear-gradient(135deg, rgba(0, 119, 182, 0.95), rgba(0, 180, 216, 0.85));    padding: 0;

    --gradient-card: linear-gradient(145deg, #ffffff 0%, #f8fafc 100%);    box-sizing: border-box;

    }

    /* Sombras */

    --shadow-sm: 0 2px 8px rgba(0, 0, 0, 0.1);body {

    --shadow-md: 0 4px 16px rgba(0, 0, 0, 0.1);    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;

    --shadow-lg: 0 8px 32px rgba(0, 0, 0, 0.15);    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);

    --shadow-xl: 0 12px 48px rgba(0, 0, 0, 0.2);    min-height: 100vh;

        overflow-x: hidden;

    /* Border Radius */}

    --radius-sm: 8px;

    --radius-md: 12px;/* ============================

    --radius-lg: 20px;   SIDEBAR

    --radius-xl: 30px;   ============================ */

    .sidebar {

    /* Transiciones */    position: fixed;

    --transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);    left: 0;

    --transition-fast: all 0.2s ease;    top: 0;

    --transition-slow: all 0.5s ease;    width: var(--sidebar-width);

        height: 100vh;

    /* Tipografía */    background: linear-gradient(180deg, #2c3e50 0%, #34495e 100%);

    --font-family: 'Poppins', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;    box-shadow: 4px 0 10px rgba(0, 0, 0, 0.1);

    --font-weight-light: 300;    z-index: 1000;

    --font-weight-regular: 400;    transition: var(--transition);

    --font-weight-medium: 500;}

    --font-weight-semibold: 600;

    --font-weight-bold: 700;.sidebar-header {

        padding: 2rem 1.5rem;

    /* Espaciado */    background: rgba(0, 0, 0, 0.1);

    --spacing-xs: 0.5rem;    border-bottom: 1px solid rgba(255, 255, 255, 0.1);

    --spacing-sm: 1rem;}

    --spacing-md: 1.5rem;

    --spacing-lg: 2rem;.sidebar-header h1 {

    --spacing-xl: 3rem;    color: white;

    --spacing-2xl: 4rem;    font-size: 1.5rem;

}    margin-bottom: 0.5rem;

}

/* ==================== RESET ==================== */

* {.sidebar-header p {

    margin: 0;    color: rgba(255, 255, 255, 0.7);

    padding: 0;    font-size: 0.9rem;

    box-sizing: border-box;}

}

.nav-menu {

html {    list-style: none;

    scroll-behavior: smooth;    padding: 1rem 0;

    font-size: 16px;}

}

.nav-item {

body {    display: flex;

    font-family: var(--font-family);    align-items: center;

    font-weight: var(--font-weight-regular);    padding: 1rem 1.5rem;

    color: var(--color-text);    color: rgba(255, 255, 255, 0.8);

    line-height: 1.6;    cursor: pointer;

    overflow-x: hidden;    transition: var(--transition);

    background: #f8fafc;    border-left: 3px solid transparent;

}}



/* ==================== TIPOGRAFÍA ==================== */.nav-item:hover {

h1, h2, h3, h4, h5, h6 {    background: rgba(255, 255, 255, 0.05);

    font-weight: var(--font-weight-bold);    color: white;

    line-height: 1.2;    border-left-color: var(--primary);

    color: var(--color-dark);}

}

.nav-item.active {

h1 { font-size: 3rem; }    background: rgba(52, 152, 219, 0.2);

h2 { font-size: 2.5rem; }    color: white;

h3 { font-size: 2rem; }    border-left-color: var(--primary);

h4 { font-size: 1.5rem; }}

h5 { font-size: 1.25rem; }

h6 { font-size: 1rem; }.nav-icon {

    font-size: 1.5rem;

p {    margin-right: 1rem;

    margin-bottom: 1rem;}

    line-height: 1.7;

}/* ============================

   MAIN CONTENT

a {   ============================ */

    text-decoration: none;.main-content {

    color: inherit;    margin-left: var(--sidebar-width);

    transition: var(--transition);    padding: 2rem;

}    min-height: 100vh;

}

img {

    max-width: 100%;.section {

    height: auto;    display: none;

    display: block;    animation: fadeIn 0.5s ease;

}}



/* ==================== UTILIDADES ==================== */.section.active {

.container {    display: block;

    max-width: 1200px;}

    margin: 0 auto;

    padding: 0 2rem;@keyframes fadeIn {

}    from {

        opacity: 0;

.container-wide {        transform: translateY(20px);

    max-width: 1400px;    }

    margin: 0 auto;    to {

    padding: 0 2rem;        opacity: 1;

}        transform: translateY(0);

    }

.text-center {}

    text-align: center;

}.section-header {

    background: white;

.text-gradient {    padding: 2rem;

    background: var(--gradient-primary);    border-radius: 10px;

    -webkit-background-clip: text;    margin-bottom: 2rem;

    -webkit-text-fill-color: transparent;    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);

    background-clip: text;}

}

.section-header h2 {

/* ==================== BOTONES BASE ==================== */    color: var(--secondary);

.btn {    font-size: 2rem;

    display: inline-flex;    margin-bottom: 0.5rem;

    align-items: center;}

    gap: 0.5rem;

    padding: 1rem 2rem;.section-header p {

    font-family: var(--font-family);    color: var(--dark);

    font-weight: var(--font-weight-semibold);    opacity: 0.7;

    border: none;}

    border-radius: var(--radius-md);

    cursor: pointer;/* ============================

    transition: var(--transition);   STATS GRID

    text-align: center;   ============================ */

}.stats-grid {

    display: grid;

.btn-primary {    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));

    background: var(--gradient-primary);    gap: 1.5rem;

    color: white;    margin-bottom: 2rem;

    box-shadow: var(--shadow-md);}

}

.stat-card {

.btn-primary:hover {    background: white;

    transform: translateY(-2px);    padding: 1.5rem;

    box-shadow: var(--shadow-lg);    border-radius: 10px;

}    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);

    transition: var(--transition);

.btn-secondary {}

    background: white;

    color: var(--color-primary);.stat-card:hover {

    border: 2px solid var(--color-primary);    transform: translateY(-5px);

}    box-shadow: 0 8px 15px rgba(0, 0, 0, 0.2);

}

.btn-secondary:hover {

    background: var(--color-primary);.stat-label {

    color: white;    color: var(--dark);

}    font-size: 0.9rem;

    opacity: 0.7;

/* ==================== CARDS BASE ==================== */    margin-bottom: 0.5rem;

.card {}

    background: white;

    border-radius: var(--radius-lg);.stat-value {

    padding: 2rem;    color: var(--secondary);

    box-shadow: var(--shadow-sm);    font-size: 2.5rem;

    transition: var(--transition);    font-weight: bold;

}    margin-bottom: 0.5rem;

}

.card:hover {

    transform: translateY(-5px);.stat-change {

    box-shadow: var(--shadow-lg);    font-size: 0.9rem;

}    font-weight: 500;

}

/* ==================== RESPONSIVE ==================== */

@media (max-width: 1024px) {.stat-change.positive {

    :root {    color: var(--success);

        font-size: 15px;}

    }

    .stat-change.negative {

    h1 { font-size: 2.5rem; }    color: var(--danger);

    h2 { font-size: 2rem; }}

    h3 { font-size: 1.75rem; }

}/* ============================

   CHARTS

@media (max-width: 768px) {   ============================ */

    :root {.chart-container {

        font-size: 14px;    background: white;

    }    padding: 2rem;

        border-radius: 10px;

    h1 { font-size: 2rem; }    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);

    h2 { font-size: 1.75rem; }    margin-bottom: 2rem;

    h3 { font-size: 1.5rem; }}

    

    .container,.chart-title {

    .container-wide {    color: var(--secondary);

        padding: 0 1rem;    font-size: 1.3rem;

    }    margin-bottom: 1.5rem;

}    font-weight: 600;

}

@media (max-width: 480px) {

    h1 { font-size: 1.75rem; }.bar-chart {

    h2 { font-size: 1.5rem; }    display: flex;

    h3 { font-size: 1.25rem; }    justify-content: space-around;

}    align-items: flex-end;

    height: 300px;
    gap: 1rem;
}

.bar-item {
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
}

.bar {
    width: 100%;
    background: linear-gradient(180deg, var(--primary), var(--primary-dark));
    border-radius: 8px 8px 0 0;
    position: relative;
    transition: var(--transition);
    display: flex;
    align-items: flex-start;
    justify-content: center;
    padding-top: 0.5rem;
}

.bar:hover {
    opacity: 0.8;
    transform: scaleY(1.05);
}

.bar-value {
    color: white;
    font-weight: bold;
    font-size: 0.9rem;
}

.bar-label {
    color: var(--dark);
    font-size: 0.85rem;
    text-align: center;
}

/* ============================
   MAP
   ============================ */
#map {
    height: 600px;
    border-radius: 10px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
}

/* ============================
   USERS TABLE
   ============================ */
.users-table {
    background: white;
    border-radius: 10px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    overflow: hidden;
}

.table-header {
    display: grid;
    grid-template-columns: 2fr 2fr 2fr 1fr;
    gap: 1rem;
    padding: 1.5rem;
    background: var(--secondary);
    color: white;
    font-weight: 600;
}

.table-row {
    display: grid;
    grid-template-columns: 2fr 2fr 2fr 1fr;
    gap: 1rem;
    padding: 1.5rem;
    border-bottom: 1px solid rgba(0, 0, 0, 0.05);
    transition: var(--transition);
    align-items: center;
}

.table-row:hover {
    background: rgba(52, 152, 219, 0.05);
}

.user-info {
    display: flex;
    align-items: center;
    gap: 1rem;
}

.user-avatar {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: linear-gradient(135deg, var(--primary), var(--primary-dark));
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-weight: bold;
}

.badge {
    padding: 0.4rem 0.8rem;
    border-radius: 20px;
    font-size: 0.8rem;
    font-weight: 600;
    display: inline-block;
}

.badge-active {
    background: rgba(39, 174, 96, 0.1);
    color: var(--success);
}

/* ============================
   RESPONSIVE
   ============================ */
@media (max-width: 768px) {
    .sidebar {
        width: 100%;
        height: auto;
        position: relative;
    }

    .main-content {
        margin-left: 0;
        padding: 1rem;
    }

    .stats-grid {
        grid-template-columns: 1fr;
    }

    .table-header,
    .table-row {
        grid-template-columns: 1fr;
        gap: 0.5rem;
    }

    .user-info {
        grid-column: 1;
    }

    #map {
        height: 400px;
    }
}

@media (max-width: 480px) {
    .section-header h2 {
        font-size: 1.5rem;
    }

    .stat-value {
        font-size: 2rem;
    }

    .bar-chart {
        height: 200px;
    }
}